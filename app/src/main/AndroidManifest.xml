<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.helabs.eltonjhony.udacitymovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.helabs.eltonjhony.udacitymovies.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie"
        android:logo="@mipmap/ic_movie"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.helabs.eltonjhony.udacitymovies.movies.ListMoviesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.local.provider.FavoritesContentProvider"
            android:authorities="${applicationId}"
            android:exported="false" />

        <activity
            android:name="com.helabs.eltonjhony.udacitymovies.details.DetailsActivity"
            android:theme="@style/AppThemeDetail"
            android:parentActivityName="com.helabs.eltonjhony.udacitymovies.movies.ListMoviesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.helabs.eltonjhony.udacitymovies.trailers.PlayerActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.helabs.eltonjhony.udacitymovies.details.DetailsActivity" />
        </activity>
    </application>

</manifest>